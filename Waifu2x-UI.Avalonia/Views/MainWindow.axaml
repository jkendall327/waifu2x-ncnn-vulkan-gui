<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Waifu2x_UI.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Waifu2x_UI.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Waifu2x_UI.Avalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Padding>10</Window.Padding>
    
    <Grid ColumnDefinitions="auto, auto, *, auto" RowDefinitions="auto, auto, *, *, auto">
        
        <TextBlock Grid.ColumnSpan="2" 
                   FontSize="40"
            Padding="15"
            Text="Waifu2x UI" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"/>
        
        <Button Grid.Row="1" Grid.Column="0"
                Margin="5"
                Content="Open"
                Command="{Binding PickExecutableCommand}"/>
        
        <TextBox Grid.Row="1" Grid.Column="1" 
                 HorizontalAlignment="Left"
                 VerticalContentAlignment="Center"
                 MaxWidth="500"
                 IsReadOnly="True" 
                 Text="{Binding ExecutableFilepath}"
                 Watermark="{Binding SelectExecutablePrompt}"/>
        
        <TextBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" 
                 IsReadOnly="True" 
                 Text="{Binding CurrentCommand}"/>
        
        <Button Grid.Column="3" Grid.Row="4" 
                Margin="5"
                Content="Run" 
                Command="{Binding RunCommandCommand}"/>
        
    </Grid>

</Window>
