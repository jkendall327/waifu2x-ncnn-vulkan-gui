<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Waifu2x_UI.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Waifu2x_UI.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Waifu2x_UI.Avalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*, *, *" RowDefinitions="*, *, *">
        <TextBlock Text="{Binding Greeting}" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"/>
        
        <TextBlock Grid.Row="1" Grid.Column="1" 
            Text="{Binding SelectExecutablePrompt}"/>
        
        <Button Grid.Row="2" Grid.Column="1"
            Content="Open"
            Command="{Binding PickExecutableCommand}"/>
        
        <TextBox Grid.Row="2" Grid.Column="2" 
                 IsReadOnly="True" 
                 Text="{Binding ExecutableFilepath}"/>
        
        <TextBox Grid.Row="1" 
                 IsReadOnly="True" 
                 Text="{Binding CurrentCommand}"/>
        
        <Button Grid.Row="2"
            Content="Run" 
                Command="{Binding RunCommandCommand}"/>
        
    </Grid>

</Window>
